{
    "compilerOptions": {
        "jsx": "preserve",
        "target": "ESNext",
        "module": "ESNext",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "paths": {
            "~/*": ["./*"],
            "@components/*": ["./components/*"],
            "@hooks/*": ["./hooks/*"],
            "@layouts/*": ["./layouts/*"],
            "@models/*": ["./models/*"],
            "@pages/*": ["./pages/*"],
            "@services/*": ["./services/*"],
            "@usecases/*": ["./usecases/*"]
        },
        "lib": ["DOM", "ESNext"]
    }
}